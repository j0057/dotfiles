[alias]
    ap = add --patch

    cm = commit --verbose
    co = checkout

    dw = diff --stat --patch
    dww = diff --stat --patch -w -W
    dc = diff --stat --patch --cached
    di = diff --stat --patch --cached

    fa = fetch --all -pv

    sw = diff --stat
    sc = diff --stat --cached
    si = diff --stat --cached

    lg    = log --color --oneline --graph --decorate --exclude='*gh-pages' --all
    lg-gh = log --color --oneline --graph --decorate                       --all
    lgw   = "!exec watch --color --interval .5 git lg"
    lgw   = "!exec watch --color --interval .5 git lg-gh"

    lp    = log --color --patch

    rv = remote -v

    rb = rebase
    rc = rebase --continue
    ri = rebase --interactive
    rI = rebase --interactive --autosquash

    s = "!f(){ git status -sb; echo; git diff --stat; }; f"

    very-clean = clean -xfd
    list-authors = "!git log --format='%aN <%cE>' | sort -u"

    e = "!exec $EDITOR $(git status --porcelain | cut -b 4-)"

[push]
    default = simple

[pull]
    rebase = true

[credential]
    helper = cache --timeout 3600

[commit]
    verbose = true

[rebase]
    autosquash = true
    autostash = true
    stat = true

[transfer]
    fsckObjects = true
