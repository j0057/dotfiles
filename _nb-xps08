#!/bin/bash -e

[ -z "$1" -o "$1" = "-D" ] || exit 1

echo 'Include ~/.ssh/nb-xps08.conf' > ssh/.ssh/config

stow -v -t $HOME $1 bash
stow -v -t $HOME $1 git
stow -v -t $HOME $1 tmux
stow -v -t $HOME $1 ssh
stow -v -t $HOME $1 vim
stow -v -t $HOME $1 pip
stow -v -t $HOME $1 scripts

./fzf-get
sudo stow -v -t '/usr/local' $1 fzf
