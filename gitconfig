[alias]
ap = add --patch

co = checkout

dw = diff --stat --patch
dww = diff --stat --patch -w -W
dc = diff --stat --patch --cached
di = diff --stat --patch --cached

fa = fetch --all -pvt

sw = diff --stat
sc = diff --stat --cached
si = diff --stat --cached

lg    = log --color --oneline --graph --decorate --exclude='*gh-pages' --all
lg-gh = log --color --oneline --graph --decorate                       --all
lgw   = "!f() { watch --color --interval .5 git lg ; }; f"
lgw-gh= "!f() { watch --color --interval .5 git lg-gh ; }; f"

lp    = log --color --patch

rv = remote -v

rb = rebase
ri = rebase --interactive
rI = rebase --interactive --autosquash

st = "!f() { \
    v=$(git describe 2>/dev/null) && echo \"$v\"; \
    git branch -avv; \
    echo; \
    git status --porcelain; \
}; f"

div = "!f() { \
    git for-each-ref refs/heads/ --format='%(refname:short)' | while read ref ; do \
        if ! git rev-parse $ref@{u} &> /dev/null ; then \
            echo \"$ref ??\" ; \
            continue ; \
        fi ; \
        a=$(git rev-list $ref@{u}..$ref --count) ; \
        b=$(git rev-list $ref..$ref@{u} --count) ; \
        if [ $a -eq 0 -a $b -eq 0 ] ; then \
            continue ; \
        fi ; \
        echo \"$ref +$a/-$b\" ; \
    done ; \
}; f"

very-clean = clean -xfd
list-authors = "!git log --format='%aN <%cE>' | sort -u"

[user]
email = j.j.molenaar@gmail.com
name = Joost Molenaar

[push]
default = simple

[pull]
rebase = true
