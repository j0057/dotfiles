[alias]
hist    = log --oneline --graph --decorate --all
history = log --oneline --graph --decorate --all
st = "!f() { \
    v=$(git describe 2>/dev/null) && echo \"$v\"; \
    git branch -avv; \
    echo; \
    git status --porcelain; \
}; f"
very-clean = clean -xfd
list-authors = "!git log --format='%aN <%cE>' | sort -u"

[user]
email = j.j.molenaar@gmail.com
name = Joost Molenaar

[push]
default = simple

[pull]
rebase = true
