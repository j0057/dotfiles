#!/bin/bash -x
if [ ! -x ~/.local/bin/pip ]; then
    if [ ! -f ~/get-pip.py ]; then
        curl -s https://bootstrap.pypa.io/get-pip.py > ~/get-pip.py
    fi
    python2.7 ~/get-pip.py --user
fi
. ~/bin/pip-config.conf
pkgs="coverage githubrelease pip setuptools setuptools-metadata setuptools-version-command tox twine virtualenv wheel"
mkdir -p $SRC $PKG
pip-download $pkgs
pip-download-whl $pkgs
pip-build $pkgs
~/.local/bin/pip install --no-index --find-links $PKG --user --upgrade $pkgs
