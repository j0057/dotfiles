#!/bin/bash

src="${1?missing source path}"
tgt="${2?missing target path}"

srcdb="$(dirname "$src")/.$(basename "$src")-sha256"
tgtdb="$(dirname "$tgt")/.$(basename "$tgt")-sha256"

update-sha256sum "$srcdb" "$src" \
    | grep -v -F -f <(update-sha256sum "$tgtdb" "$tgt" | awk '{print $1}') \
    | cut -c 67- \
    | sort
