#!/bin/bash

case `uname` in
    Linux)
        LN="ln -sfTi"
        ;;

    Darwin)
        LN="ln -sfFi"
        ;;
esac

case "$1" in

    deploy)
        $LN $(pwd)/bin                 ~/bin
        $LN $(pwd)/vim                 ~/.vim
        $LN $(pwd)/bash_settings       ~/.bash_settings
        $LN $(pwd)/gitconfig           ~/.gitconfig
        $LN $(pwd)/tmux.conf           ~/.tmux.conf

        mkdir -p ~/.ssh
        chmod 700 ~/.ssh
        $LN $(pwd)/sshconfig.d         ~/.ssh/config.d
        ;;

    undeploy)
        rm -f ~/bin
        rm -f ~/.vim
        rm -f ~/.bash_settings
        rm -f ~/.gitconfig
        rm -f ~/.tmux.conf

        rm -f ~/.ssh/config.d
        ;;

    redeploy)
        "$0" undeploy
        "$0" deploy
        ;;

    *)
        echo "usage: $(basename $0) deploy|undeploy|redeploy" 1>&2
        exit 1
        ;;

esac
