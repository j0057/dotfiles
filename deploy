#!/bin/bash

case `uname` in
    Linux)
        LN="ln -sfTi"
        ;;

    Darwin)
        LN="ln -sfFi"
        ;;
esac

case `basename $0` in

    deploy)
        $LN $(pwd)/bin                 ~/bin
        $LN $(pwd)/vim                 ~/.vim
        $LN $(pwd)/vim/vimrc           ~/.vimrc
        $LN $(pwd)/bash_aliases        ~/.bash_aliases
        $LN $(pwd)/bash_settings       ~/.bash_settings
        $LN $(pwd)/gitconfig           ~/.gitconfig

        mkdir -p ~/.ssh
        chmod 700 ~/.ssh
        $LN $(pwd)/sshconfig.d         ~/.ssh/config.d
        ;;

    undeploy)
        rm -f ~/bin
        rm -f ~/.bash_aliases
        rm -f ~/.bash_settings
        rm -f ~/.vim
        rm -f ~/.vimrc
        rm -f ~/.gitconfig
        rm -f ~/.ssh/config.d
        ;;

    redeploy)
        ./undeploy
        ./deploy
        ;;

esac

