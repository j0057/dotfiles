#!/bin/bash -ex

[ -z "$1" -o "$1" = "-D" ] || exit 1

mkdir -pv $HOME/.vim

stow -v -t $HOME            $1 bash
stow -v -t $HOME            $1 git
stow -v -t $HOME/.vim       $1 vim
stow -v -t $HOME            $1 pip
stow -v -t $HOME/.local/bin $1 scripts
stow -v -t $HOME/.local/bin $1 media

sudo \
stow -v -t /usr/local       $1 admin
